class Bank_Account():
    def __init__(self, owner, balance=0):
        self.owner = owner
        self.balance = balance

    def deposit(self, amount):
        self.balance += amount
        print(f"Deposited ${amount}. New balance: ${self.balance}")

    def withdraw(self, amount):
        if amount <= self.balance:
            self.balance -= amount

    def get_balance(self):
        earnings = input("Enter your earnings: ")
        print(f"Current balance: ${int(self.balance) + int(earnings)}")

account = Bank_Account("Parthibo Borno", 10000)
account.deposit(100)
account.withdraw(0)
account.get_balance()
